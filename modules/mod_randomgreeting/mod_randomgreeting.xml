<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
    <name>MOD_RANDOMGREETING_NAME</name>
    <version>1.0.10</version>
    <author>me</author>
    <creationDate>today</creationDate>
    <description>MOD_RANDOMGREETING_DESCRIPTION</description>
    <namespace path="src">My\Module\RandomGreeting</namespace>
    <files>
        <folder module="mod_randomgreeting">services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
    </files>
    <scriptfile>script.php</scriptfile>
    <media destination="mod_randomgreeting" folder="media">
        <filename>joomla.asset.json</filename>
        <folder>js</folder>
    </media>
