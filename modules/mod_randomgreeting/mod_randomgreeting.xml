        <fields name="params">
            <fieldset name="basic">
                <field
                    name="header"
                    type="list"
                    label="MOD_RANDOMGREETING_HEADER_LEVEL"
                    >
                    <option value="h3">MOD_RANDOMGREETING_HEADER_LEVEL_3</option>
                    <option value="h4">MOD_RANDOMGREETING_HEADER_LEVEL_4</option>
                    <option value="h5">MOD_RANDOMGREETING_HEADER_LEVEL_5</option>
                    <option value="h6">MOD_RANDOMGREETING_HEADER_LEVEL_6</option>
                </field>
            </fieldset>
        </fields>
    </config>
     <updateservers>
        <!-- Change the URL below to match that of your own update development environment -->
        <server type="extension" name="Hello Module Updates">http://localhost/j500b1/updateserver/updates.xml</server>
    </updateservers>
